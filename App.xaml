<Application x:Class="EBSOrdersManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EBSOrdersManager"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ColorStyles.xaml"/>
                <ResourceDictionary Source="ColumnHeaderStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="MontserratRegular">Montserrat-Regular.ttf#Montserrat</FontFamily>
            <FontFamily x:Key="MontserratBold">Montserrat-Bold.ttf#Montserrat</FontFamily>
            <FontFamily x:Key="MontserratSemiBold">Montserrat-SemiBold.ttf#Montserrat</FontFamily>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
